<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/ll_rv_mainBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_rv_BirdImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_rv_BirdName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightblue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_rv_BirdCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="这是一个跳转这是一个跳转这是一个跳转这是一个跳转这是一个跳转这是一个跳转这是一个跳转这是一个跳转这是一个跳转这是一个跳转这是一个跳转这是一个跳转"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_rv_BirdId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray" />

    </LinearLayout>


</LinearLayout>
